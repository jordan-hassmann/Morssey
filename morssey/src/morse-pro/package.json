{
  "name": "morse-pro",
  "version": "2.0.0",
  "description": "Library for manipulating Morse code text and sound. Understands prosigns and Farnsworth speed. Can create WAV files and analyse input from the microphone or audio files.",
  "keywords": [
    "morse code",
    "decoder",
    "wav file",
    "microphone",
    "sound file",
    "adaptive",
    "keyer",
    "iambic",
    "prosigns"
  ],
  "license": "EUPL-1.2",
  "homepage": "https://morsecode.scphillips.com",
  "author": {
    "name": "Stephen C Phillips",
    "email": "steve@scphillips.com",
    "url": "https://scphillips.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/scp93ch/morse-pro.git"
  },
  "bugs": {
    "url": "https://github.com/scp93ch/morse-pro/issues"
  },
  "directories": {
    "lib": "lib",
    "doc": "doc"
  },
  "files": [
    "lib"
  ],
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-istanbul": "^5.1.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "esdoc": "^1.1.0",
    "esdoc-standard-plugin": "^1.0.0",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^13.0.1",
    "rimraf": "^2.6.3"
  },
  "esdoc": {
    "source": "./src",
    "destination": "./doc",
    "plugins": [
      {
        "name": "esdoc-standard-plugin"
      }
    ]
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "scripts": {
    "clean": "rimraf lib coverage doc",
    "prebuild": "npm run clean -s",
    "build": "babel src -d lib",
    "test": "cross-env NODE_ENV=test nyc mocha",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "prepare": "npm run build",
    "build-docs": "esdoc"
  }
}
